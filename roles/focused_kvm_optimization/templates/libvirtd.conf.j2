# LibVirt Configuration for KVM Host Optimization
# Auto-generated by Ansible - do not edit manually

# Connection limits for high VM density
max_clients = 1000
max_queued_clients = 500
max_anonymous_clients = 100

# Threading
max_workers = 20
max_requests = 1000

# Memory management
max_client_requests = 100

# Logging
log_level = 3
log_outputs = "3:stderr"

# Security
unix_sock_group = "libvirt"
unix_sock_ro_perms = "0777"
unix_sock_rw_perms = "0770"
unix_sock_admin_perms = "0700"

# Authentication
auth_unix_ro = "none"
auth_unix_rw = "none"

# Performance optimizations
keepalive_interval = 5
keepalive_count = 5
keepalive_required = 1

# Process management
max_processes = 100
max_files = 2048